{% extends '::base.html.twig' %}
{% block body %}
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Nueva empresa
        </h1>
    </div>
</div>
<!-- /.row -->

{{ form_start(form) }}
<div class="formulario">
  <div class="form-group">
      {{ form_label(form.nombre) }}
      {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
      {{ form_errors(form.nombre) }}
  </div>

  <div class="form-group">
      {{ form_label(form.apellidos) }}
      {{ form_widget(form.apellidos, {'attr': {'class': 'form-control'}}) }}
      {{ form_errors(form.apellidos) }}
  </div>

  <div class="form-group">
      {{ form_label(form.departamento) }}
      {{ form_widget(form.departamento, {'attr': {'class': 'form-control'}}) }}
      {{ form_errors(form.departamento) }}
  </div>
</div>

  <div class="botones">
    {{ form_widget(form.guardar, {'attr': {'class': 'btn btn-info'}}) }}
    {{ form_widget(form.borrar, {'attr': {'class': 'btn btn-danger'}}) }}
  </div>

{{ form_end(form) }}
{% endblock %}
